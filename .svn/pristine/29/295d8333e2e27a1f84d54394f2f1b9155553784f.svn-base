}

/* 스크랩 정보가 없을 경우 css */
.feather {
	width: 50px;
	height: 50px;
	stroke: currentColor;
	stroke-width: 2;
	stroke-linecap: round;
	stroke-linejoin: round;
	fill: none;
}

.modalBody {
	height : 800vh;
}


.noData {
    text-align: center;
    padding: 130px 0 !important;
    width: 100% !important;
    font-size: 16px;
    list-style-type: none;
}

.noLogin {
    text-align: center;
    padding: 70px 0 !important;
    width: 100% !important;
    font-size : 50px;
    list-style-type: none;
}
.noLogin_txt {
	font-size: 16px;
}

.noData .txt:before {
    content: '';
    display: block;
    width: 3px;
    height: 45px;
    margin: 0 auto 30px;
    background: url(../../assets/img/ExclamationMark.png)
}

.noLogin_login {
	width : 120px;
	height : 50px;
	font-size : 17px;
	padding-top : 5px;
	border: none;
}


