@charset "UTF-8";

#roomNo table {
  border-collapse: collapse;
}

#roomNo .cell-content {
  border: 1px solid black;
  border-radius: 10px;
  padding: 8px; /* 적절한 값으로 조정하세요 */
}

/* QR */
.qr {
	width: 100%;
	height: 100%;
	text-align: center;
}

.qr>.qr-div {
	float: left;
	width: 1%;
	height: 98%;
}

.qr>.qr-div:first-child {
	width: 49%;
}

.qr>.qr-div:last-child {
	background-color: #D3D3D3;
	width: 49%;
}

.qr-div#output {
	background-color: #BDBEBD;
	padding-left: 10px;
	padding-right: 10px;
	padding-top: 10px;
	padding-bottom: 10px;
}

.qr-div#frame {
	border: 2px solid #005666;
	background-color: #FFFFFF;
	margin-left: 10px;
	margin-right: 10px;
	padding-left: 8px;
	padding-right: 8px;
	padding-top: 8px;
	padding-bottom: 8px;
}
