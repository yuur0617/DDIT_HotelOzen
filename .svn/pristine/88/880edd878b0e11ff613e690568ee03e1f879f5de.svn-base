<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mybatis.mappers.CstmrRsvtRetrieveMapper">

<select id="selectNberRsvt" parameterType="CstmrVO" resultType="RsvtVO">
	SELECT 
		RSVT_NO
		, RSVT_AMNT
		, RSVT_YMD
		, RSVT_CHECKIN_YMD
		, RSVT_CHECKOUT_YMD
		, RSVT_CNCL_YN
		, RSVT_ROOM_CNT
		, RSVT_ADULT_CNT
		, RSVT_CHILD_CNT
		, RMT_TYPE_CD
	FROM TB_RSVT INNER JOIN TB_CSTMR USING (CST_NO)
				 INNER JOIN TB_RSVT_DETAILS USING (RSVT_NO)
    WHERE RSVT_NO = #{rsvt[0].rsvtNo}
			AND CST_HP = #{cstHp}
	GROUP BY RSVT_NO
			, RSVT_AMNT
			, RSVT_YMD
			, RSVT_CHECKIN_YMD
			, RSVT_CHECKOUT_YMD
			, RSVT_CNCL_YN
			, RSVT_ROOM_CNT
			, RSVT_ADULT_CNT
			, RSVT_CHILD_CNT
			, RMT_TYPE_CD
</select>

<select id="selectMberRsvtList" parameterType="CstmrVO" resultType="RsvtVO">
	SELECT 
		RSVT_NO
		, RSVT_AMNT
		, RSVT_YMD
		, RSVT_CHECKIN_YMD
		, RSVT_CHECKOUT_YMD
		, RSVT_CNCL_YN
		, RSVT_ROOM_CNT
		, RSVT_ADULT_CNT
		, RSVT_CHILD_CNT
	FROM TB_RSVT INNER JOIN TB_CSTMR USING (CST_NO)
	<![CDATA[
    WHERE 
    	CST_NO = #{cstNo} 
    	AND RSVT_CHECKIN_YMD <= SYSDATE
    	AND RSVT_CNCL_YN = 'N'
	ORDER BY RSVT_CHECKIN_YMD
	]]>
</select>

<resultMap type="RsvtDetailsVO" id="rsvtDetailsMap" autoMapping="true">
	<collection property="roomTypeVO" ofType="RoomTypeVO" autoMapping="true">
		<result property="rmtTypeCd" column="RMT_TYPE_CD"/>
	</collection>
</resultMap>
<select id="selectRsvtDetailsList" parameterType="RsvtVO" resultMap="rsvtDetailsMap">
	SELECT
        RSVT_NO
        , RSVT_DTL_NO
		, RSVT_AMNT
		, RSVT_YMD
		, RSVT_CHECKIN_YMD
		, RSVT_CHECKOUT_YMD
		, RSVT_ROOM_CNT
		, RSVT_DTL_AMNT
		, RSVT_DTL_ADULT_CNT
		, RSVT_DTL_CHILD_CNT
		, RSVT_SE
		, RMT_TYPE_CD
		, RMT_NM_DETAILS
		, RMT_NM
	FROM TB_RSVT INNER JOIN TB_RSVT_DETAILS USING (RSVT_NO)
				 INNER JOIN TB_CSTMR USING (CST_NO)
				 INNER JOIN TB_ROOM_TYPE USING (RMT_TYPE_CD)
	<![CDATA[
	WHERE 
		RSVT_NO = #{rsvtNo} 
		AND RSVT_CHECKIN_YMD <= SYSDATE
		AND RSVT_CNCL_YN = 'N'
	ORDER BY RSVT_CHECKIN_YMD
	]]>
</select>
