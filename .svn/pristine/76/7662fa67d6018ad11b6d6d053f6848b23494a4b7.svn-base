.location_detail_two > p {
	font-size : 20px;
	margin-left : 20px;
}
.location_detail_two {
	margin-bottom : 50px;
}
.accordion {
/* 	margin-left : 200px; */
	font-size: 20px;
}
.accordion-button {
	font-size: 30px;
}
.accordion-button:focus {
    box-shadow: none; /* 포커스 상태일 때 테두리 제거 */
  }
.accordion-body{
	background-color : #f2f2f2;
}
.busButton {
	height : 100px;
}
.busButton > p {
	font-size : 25px;
}
.busBody b {
    padding: 10px;
}
.busBody li{
	font-size : 17px; 
	color : #666;
	padding : 20px;
	list-style-position: inside;
}
.busHeader{
	border-bottom: 1px solid rgba(0, 0, 0, .15);
	margin-bottom : 0;
}