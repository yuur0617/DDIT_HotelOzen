@charset "UTF-8";


.wrap {
    margin: 0;
   	position: relative;
}
.hotelMap {
	height : 700px;
}
.location_title {
	display: block;
    font-size: 27px;
    font-weight: 500;
    letter-spacing: -0.025em;
    margin-top : 50px;
}
.hr_title {
	border : 1px solid #000000;
	margin-top : 20px;
}
.location_detail > p {
	font-size: 20px;
    font-weight: 400;
    letter-spacing: -0.025em;
    line-height: 1.5;
    margin-bottom : 30px;
}
.location_addr > p{
	margin-left : 7px;
}
.location_addr > .b_inner {
	margin-left : 15px;
}

