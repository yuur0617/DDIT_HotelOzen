<%@ page contentType="text/html; charset=UTF-8" %>
<%@ taglib uri="http://tiles.apache.org/tags-tiles" prefix="tiles" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form"%>

<section>
	<div>
		<div class="recomCar-header mx-10">
			<h1 class="cstmr-title mx-5">추천</h1>
			<p class="cstmr-content mx-5 mb-5">호텔 오젠 추천</p>
		</div>
	</div>
	<div class="card mb-3 container recom-table">
		<div class="card-header d-flex align-items-center">
			<div class="recom-div">
				<div class="col-auto">
					<div class="card mt-3 mb-3 container">
						<div class="card-header">
							<div class="card-img-top mx-3 col-5">
								<img class="carDdit" alt="배너"
									src="${pageContext.request.contextPath}/resources/assets/img/recomCar/CAR01.jpg">
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="mx-2">
				<table class="table">
					<tr>
						<th>차량명</th>
						<td class="carNm"></td>
					</tr>
					<tr>
						<th>승차정원</th>
						<td class="carLim"></td>
					</tr>
					<tr>
						<th>차종</th>
						<td class="carKind"></td>
					</tr>
					<tr>
						<th>연식</th>
						<td class="carAge"></td>
					</tr>
				</table>
			</div>

		</div>
	</div>

</section>
