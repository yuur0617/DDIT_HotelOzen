@charset "UTF-8";


.wrap {
	max-width: 1542rem;
    margin: 0 auto;
   	position: relative;
}
#map {
	margin-bottom : 100px;
}
.location_title {
	display: block;
    font-size: 2rem;
    font-weight: 500;
    letter-spacing: -0.025em;
    margin-top : 100px;
}
.hr_title {
	border : 1px solid #000000;
	width : 100rem;
	margin-top : 50px;
}
.location_detail > p {
	font-size: 20px;
    font-weight: 400;
    letter-spacing: -0.025em;
    line-height: 1.5;
    margin-bottom : 30px;
}
.location_detail_two > b {
	font-size : 20px;
}
.location_detail_two > .b_inner {
	margin-left : 20px;
}
.location_detail_two > p {
	font-size : 20px;
	margin-left : 20px;
}
.location_detail_two {
	margin-bottom : 50px;
}
.accordion {
	width : 100rem;
	margin-left : 200px;
	font-size: 20px;
}
.accordion-button {
	font-size: 30px;
}
.accordion-button:focus {
    box-shadow: none; /* 포커스 상태일 때 테두리 제거 */
  }
.accordion-body{
	background-color : #d6d6d6;
}