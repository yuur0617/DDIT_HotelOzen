@charset "UTF-8";



#fp-nav ul li a span {
	background-color: #fff;
}
.d-flex {
	display: flex;
}

.footer-video {
	width : 100%;
	height : 300px;
	overflow : hidden;
	margin : 0px auto;
/* 	position : relative;
	opacity : .3; */
	filter: brightness(0.7) saturate(0.7);
	position: relative;
	
}
.text-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-30%, -30%);
    color: white; /* 텍스트 색상 설정 */
    text-align: center;
}
.first_inner > a {
	float: right;
}
.main_reserv_container {
	height : 17rem;
	margin-left : 300px;
	margin-right : 300px;
	box-sizing: border-box;
}
.footer-video_inner{
	width :100%
}
.reserv-top {
	height : 50%; 
	padding-top : 30px;
	padding-bottom : 30px;
	background-color : yellow;
}
.reserv-top > b {
	display: flex;
    justify-content: center; /* 좌우 정렬 */
    font-size : 50px;
}
.reserv-bottom {
	background-color : blue;
}
.reserv-bottom > p {
	display: flex;
    justify-content: center; /* 좌우 정렬 */
    font-size : 50px;
}


#roomBox{
	width:1200px;
	height: 380px;
	text-align: center;
	align-items: center;
	justify-content: center;
	background-color: white;
}
.room-num{
	width:130px;
	padding-top: 10px;
	margin-right: 30px;
}
.room-btn{
	width:230px;
	border-bottom: 1px solid;
	margin: 10px;
	padding-bottom: 10px;
}
.room-btn > span{
	text-align: center;
	padding-right: 21px;
	padding-left: 21px;
	margin-left:25px;
	margin-right:25px;
	width: 200px;
	font-size: 18px;
	font-weight: 300;
}
.adl-span{
	padding-right: 30px !important;
	padding-left: 30px !important;
}
#roomBox > div > div > div{
	 justify-content: center;
	 text-align: center;
	 align-items: center;
}
#roomBox > div{
	 justify-content: center;
	 text-align: center;
	 align-items: center;
	 padding: 30px;
	 padding-left: 0px;
}
.room{
	margin-right: 130px;
}
.room-btn > button{
	border: none;
	background-color: #fff;
	width: 33px;
	height: 33px;
}
#roomBox > button{
	position: absolute;
    top: 140px;
    right: 143px;
	border: none;
	background-color: #fff;
	width: 45px;
	height: 45px;
}
.room-num > h2{
	font-size: 24px;
	font-weight: 300;
}