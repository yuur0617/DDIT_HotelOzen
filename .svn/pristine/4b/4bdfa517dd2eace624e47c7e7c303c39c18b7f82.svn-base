@charset "UTF-8";

* {
	margin:0;
	padding:0;
}
.tnb > div {
   padding-right : 5px;
   padding-left : 5px;
}
ul{padding:0; margin:0}
li{list-style:none}
ul>li {
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
/*     padding-inline-start: 40px; */
    font-size: 20px;
}


.main-layout {
    position: relative;
    /* 	overflow : hidden; */
}

#gnb {
  position: relative;
  z-index: 2; 
  width:100%;
   /*    top: 0;
    left: 0;
    */
}

#gnb .gnb_inner{margin:0 auto}

#gnb .logo {
	position:absolute;
	left:0;
	top:0;
	width:300px;
	height:50px; 
	margin:0
}
#gnb .logo img {
	padding-left : 30px;
}



span {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 40px;
    text-align: center;
    vertical-align: top;
    letter-spacing: 1px;
}

.nav-link:hover {
    color: #ff6600;
    /*  원하는 색상으로 변경 가능 */
}

.navi>li>a {
    font-size: 22px;
    text-align: center;
    display: block;
    text-decoration: none;
    font-weight : 500;
}
.navi>li>p {
    font-size: 22px;
    text-align: center;
    display: block;
    text-decoration: none;
    font-weight : 500;
    cursor : pointer;
}

.navi>li>a:hover {
    color: #ff6600;
    text-decoration: none;
}
.navi>li>p:hover {
    color: #ff6600;
    text-decoration: none;
}

.sub01>li {
  display: flex;
/*   justify-content: center; */
}
.sub01>li>a {
    font-size: 20px;
    text-align: center;
    display: block;
    font-size : 15px;
    text-decoration: none;
}

.sub01>li>a:hover {
	color: #ff6600;
}

.sub01 {
    display: none;
    position: absolute;
    transition: width 0.3s ease-out;
    width: 100%;
    background-color : yellow;
}

.navi>li {
    display: block;
    float: left;
    padding: 20px;
    margin: 0;
    
}

.navi>li:hover .sub01 {
  
    /* 펼쳐질 때의 너비를 설정 (조절 가능) */
    text-decoration: none;
}

/* 나머지 스타일은 이전 예제와 동일합니다 */
.navi_layout-accom,
.navi_layout-recom,
.navi_layout-comm,
.navi_layout-about {
    position: relative;
}

.navi_layout-accom .sub01,
.navi_layout-recom .sub01,
.navi_layout-comm .sub01,
.navi_layout-about .sub01 {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
}

