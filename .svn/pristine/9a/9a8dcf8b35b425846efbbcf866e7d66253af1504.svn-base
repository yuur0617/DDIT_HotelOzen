<select id="select" parameterType="string" resultType="EmpNoticeVO">
	SELECT
	    EMP_NT_NO
	  , EMP_NO
	  , EMP_NT_NM
	  , EMP_NT_YMD
	  , EMP_NT_CNT
	  , EMP_NT_CN
	  , EMP_NT_CLASSIFICATION
	FROM
	    TB_EMP_NOTICE 
    WHERE EMP_NT_NO = #{empNtNo,jdbcType=VARCHAR}
</select>

