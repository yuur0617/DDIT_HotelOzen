@charset "UTF-8";

.total-header{
	height: 109px;
    box-shadow: 0px 2px 7px rgb(0,0,0,0.3);
}

.tnb > div {
   padding-right : 2px;
   padding-left : 2px;
}
ul{padding:0; margin:0}
gnb_inner li{list-style:none}
ul>li {
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
/*     padding-inline-start: 40px; */
    font-size: 20px;
}
.tnb {
	height : 30px;
}

.main-layout {
    position: relative;
    /* 	overflow : hidden; */
}

#gnb {
  position: relative;
  z-index: 2; 
  width:100%;
}

.menuStart {
	height: 50px;
}

.gnb_inner {
	flex: 1;
    display: flex;
    justify-content: center;
    align-items:center;
    position: absolute; 
    left: 50%; 
    top: 50%; 
    transform: translate(-50%, -50%);
    padding-top:18px;
}

.logo_start {
	position: absolute;
    width: 350px;
    height: 55px;
    z-index: 10;
    margin-top: 25px;
    margin-left: 17px;
}

.logo > img{
	display: block;
    width: 100%;
    height: 85%;
	padding-left : 30px;
	margin-top: 11px;
}



.nav-link > span {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 40px;
    margin-left : 5px;
    margin-right : 5px;
    text-align: center;
    vertical-align: top;
    letter-spacing: 1px;
    font-size : 13px;
    padding-top : 10px;
}

.nav-link:hover {
    color: #ff6600;
    /*  원하는 색상으로 변경 가능 */
}

.navi>li>a {
    font-size: 20px;
    text-align: center;
    display: block;
    text-decoration: none;
    font-weight : 500;
    cursor : pointer;
}
.navi>li>p {
    font-size: 20px;
    text-align: center;
    display: block;
    text-decoration: none;
    font-weight : 500;
    cursor : pointer;
}

.navi>li>a:hover {
    color: #ff6600;
    text-decoration: none;
}
.navi>li>p:hover {
    color: #ff6600;
    text-decoration: none;
}

.sub01>li {
  display: flex;
  justify-content: center;
}
.sub01>li>a {
    font-size: 20px;
    text-align: center;
    display: block;
    font-size : 15px;
    text-decoration: none;
}

.sub01>li>a:hover {
	color: #ff6600;
}

.sub01 {
    display: none;
    position: absolute;
    transition: width 0.3s ease-out;
    width: 100%;
    background-color : yellow;
}

.navi>li {
    display: block;
    float: left;
    padding: 25px;
    margin: 0;
    
}

.navi>li:hover .sub01 {
  
    /* 펼쳐질 때의 너비를 설정 (조절 가능) */
    text-decoration: none;
}

/* 나머지 스타일은 이전 예제와 동일합니다 */
.navi_layout-accom,
.navi_layout-recom,
.navi_layout-comm,
.navi_layout-about {
    position: relative;
}

.navi_layout-accom .sub01,
.navi_layout-recom .sub01,
.navi_layout-comm .sub01,
.navi_layout-about .sub01 {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
}


/* 날씨찾기 */
.weather {
	position: absolute;
    right: 20px; /* 원하는 간격으로 조절 가능 */
    top: 50%; /* 중앙 정렬을 위해 50%로 설정 */
    transform: translateY(-50%); /* 중앙 정렬을 위해 -50%로 설정 */
}
.weather_box {
	display: flex;
    align-items: center;
    padding-right: 50px;
}
.JejuIcon {
	font-size:30px;
}
.weather_box > span {
	padding-top : 7px;
	font-size:15px;
}
