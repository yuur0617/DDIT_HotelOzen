@charset "UTF-8";

#fp-nav ul li a span {
	background-color: #fff;
}

.d-flex {
	display: flex;
}

.footer-video {
	width: 100%;
	height: 300px;
	overflow: hidden;
	margin: 0px auto;
	/* 	position : relative;
	opacity : .3; */
	filter: brightness(0.7) saturate(0.7);
	position: relative;
}

.text-overlay {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-30%, -30%);
	color: white; /* 텍스트 색상 설정 */
	text-align: center;
}

.first_inner>a {
	float: right;
}

.main_reserv_container {
	height: 17rem;
	margin-left: 300px;
	margin-right: 300px;
	box-sizing: border-box;
}

.footer-video_inner {
	width: 100%
}

.reserv-top {
	height: 50%;
	padding-top: 30px;
	padding-bottom: 30px;
	background-color: yellow;
}

.reserv-top>b {
	display: flex;
	justify-content: center; /* 좌우 정렬 */
	font-size: 50px;
}

.reserv-bottom {
	background-color: blue;
}

.reserv-bottom>p {
	display: flex;
	justify-content: center; /* 좌우 정렬 */
	font-size: 50px;
}

#roomBox {
	width: 1200px;
	height: 380px;
	text-align: center;
	align-items: center;
	justify-content: center;
	background-color: white;
	margin: 0 auto;
	display: flex;
	margin-bottom: 30px;
}
.inputBox{
	margin: 0 auto;
	display: flex;
	text-align: center;
	justify-content: center;
	height: 100px;
	width: 1200px;
}
.room-num {
	width: 130px;
	padding-top: 10px;
	margin-right: 30px;
}

.room-btn {
	width: 230px;
	border-bottom: 1px solid;
	margin: 10px;
	padding-bottom: 10px;
}

.room-btn>span {
	text-align: center;
	padding-right: 21px;
	padding-left: 21px;
	margin-left: 25px;
	margin-right: 25px;
	width: 200px;
	font-size: 18px;
	font-weight: 300;
}

.adl-span {
	padding-right: 30px !important;
	padding-left: 30px !important;
}

#roomBox>div>div>div {
	justify-content: center;
	text-align: center;
	align-items: center;
}

#roomBox>div {
	justify-content: center;
	text-align: center;
	align-items: center;
	padding: 20px;
	padding-left: 75px;
	padding-top: 31px;
}
.inner{
    padding-top: 130px;
}
#submitForm{
	display: flex;
	justify-content: center;
}
.back{
	background-color: black;
	width: 100%;
	height: 100%;
}
.room {
	margin-right: 110px;
}

.room-btn>button {
	border: none;
	background-color: #fff;
	width: 33px;
	height: 33px;
}

#roomBox>button {
	border: none;
	background-color: #fff;
	width: 45px;
	height: 45px;
	float: right;
	margin: 10px;
}

.room-num>h2 {
	font-size: 24px;
	font-weight: 300;
}

#input-box > div:first-child {
	width: 400px;
	text-align: center;
	justify-content: center;
	padding-top: 10px;
}

#input-box > div > div{
	padding: 40px;
	padding-top: 0px;
}

#input-box > div > div > h3{
	color: white;
	font-weight: 700;
	text-shadow: 1px 1px 2px gray;
}
h5{
	color: #cdcdcd;
	font-weight: 700;
	font-size: 15px;
	vertical-align: bottom;
	text-shadow: 0px 0px 2px gray;
}
h1{
	color: white;
	font-family: JungChul !important;
	text-align: center;
	font-size: 42px;
	margin-bottom: 70px;
	text-shadow: 2px 2px 3px gray;
	 
}
input[type="date"]{
	border: none;
    width: 200px;
    height: 30px;
    font-size: 25px;
    color: white !important;
    background-color: transparent;
    margin-top: 11px;
    font-weight: 700;
    margin-left: 35px;
}
.tit{
	align-items: center;
	position: relative;
	align-items: center;
	width: 1200px;	
}
.hotel{
	margin-top: 2px;
	width: 168px;
	text-align: left;
	margin-right: 3px;
}
.hotel > h3 {
	font-weight: 700;
	color: white;
	font-size: 25px;
	margin-top: 11px;
	
}
.dateBox{
	width: 486px;
	text-align: left;
	margin-left:38px;
}
.roomCnt{
	width: 90px;
	text-align: right;
	margin-left: 8px;
}
.adultCnt{
	width: 94px;
	text-align: right;
}
.childCnt{
	width: 95px;
	text-align: right;
}
.btnBox{
	padding:0px !important;
}
#submitBtn{
	width: 130px;
	height: 50px;
	margin-top: 2px;
}

input[type="date"] {
	position : relative;
}
input[type="date"]::-webkit-clear-button,
input[type="date"]::-webkit-inner-spin-button{
	display:none;
}
input[type="date"]::-webkit-calendar-picker-indicator{
	position:absolute;
	left:0;
	top:0;
	width:100%;
	height: 100%;
	background: transparent;
	color: transparent;
	cursor: pointer;
}
.dash{
	color: white;
    font-weight: 700;
    font-size: 38px;
}
.tit > div:first-child {
	width: 164px;
	margin-left: 5px;
}





































