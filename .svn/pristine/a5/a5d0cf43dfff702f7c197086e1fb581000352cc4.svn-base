<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mybatis.mappers.EmpFxtrsRqstMapper">

	<sql id="searchFrag">
		<trim prefix="WHERE" prefixOverrides="OR">
	        <if test="@org.apache.commons.lang3.StringUtils@isNotBlank(simpleCondition.searchWord)">
	            OR RQST_NO LIKE '%${simpleCondition.searchWord}%'
	        </if>
	        <if test="@org.apache.commons.lang3.StringUtils@isNotBlank(simpleCondition.searchWord)">
	            OR RQST_SE LIKE '%${simpleCondition.searchWord}%'
	        </if>
		</trim>
	</sql>

	<select id="selectTotalRecord" parameterType="PaginationInfo" resultType="int">
		SELECT 
		    COUNT(*)
		FROM 
			TB_FXTRS_RQST
		<include refid="searchFrag" />
	</select>

	<select id="selectList" resultType="FxtrsRqstVO" parameterType="PaginationInfo">
		WITH RNUMFXTRS AS (
			SELECT 
				ROWNUM RNUM, A.*    
		    FROM (
				SELECT 
				    RQST_NO
				    , EMP_NO
				    , RQST_YMD
				    , RQST_AMNT
				    , RQST_SE
				    , EMP_RQ_NO
				    , RQST_RQ_YMD
				    , EMP_PURCHS_NO
				    , RQST_PURCHS_YMD
				FROM 
					TB_FXTRS_RQST
				<include refid="searchFrag" />
				ORDER BY 
					RQST_NO DESC
			)A
		)
		SELECT *
		FROM RNUMFXTRS
		<![CDATA[
			WHERE RNUM >= #{startRow} AND RNUM <= #{endRow}
		]]>
		
	</select>
	
	<select id="selectEmpName" resultType="FxtrsRqstVO" parameterType="String">
		SELECT 
			EMP_NM
		FROM 
			TB_EMP
		WHERE 
			EMP_NO = #{empNo}
	</select>
	
	<select id="selectRqstNo" resultType="String">
		SELECT 
		    'FXRQ' || TO_CHAR(SYSDATE, 'YYMM') || LPAD(COALESCE(MAX(TO_NUMBER(SUBSTR(RQST_NO, 8))), 0) + 1, 3, '0') AS RQST_NO 
		FROM 
		    TB_FXTRS_RQST
		WHERE 
		    RQST_NO LIKE ('FXRQ%')
		    AND SUBSTR(RQST_NO, 4, 2) = TO_CHAR(SYSDATE, 'YY') 
		    AND SUBSTR(RQST_NO, 6, 2) = TO_CHAR(SYSDATE, 'MM')
	</select>
	
	<select id="selectFxtrs" resultType="FxtrsVO" parameterType="String">
		SELECT 
		    FX_CD
		    , FX_NM
		    , FX_PRES_CNT
		    , FX_TTRTN_CNT
		    , FX_AMNT
		    , FX_UNIT
		    , FX_CLS_CD
		FROM 
			TB_FXTRS
		WHERE 
			FX_CD = #{fxCd}
	</select>
	
	<select id="selectRqstEmp" resultType="EmpVO">
		SELECT 
		    EMP_NO
		    , EMP_NM
		FROM 
			TB_EMP
		WHERE 
			EMP_DEPT = 'HKP' AND EMP_JBGD = 'DPM'
	</select>
	
	
	
	<insert id="insertFxtrsRqst" parameterType="Map">
		INSERT INTO TB_FXTRS_RQST (
		    RQST_NO
		    , EMP_NO
		    , RQST_YMD
		    , RQST_AMNT
		    , RQST_SE
		    , EMP_RQ_NO
		) VALUES (
			#{rqstNo}
			, #{empNo}
		  	, #{ymd}
		  	, #{fxTotalAmnt}
		  	, '요청승인대기'
		  	, #{empRqNo}
		)
	</insert>
	
	<insert id="insertFxtrsRqstDtl" parameterType="Map">
		INSERT INTO TB_FXTRS_RQST_DETAILS (
		    FX_CD
		    , RQST_NO
		    , FX_RQST_CNT
		    , FX_RQST_TOTALAMNT
		) VALUES (
			#{fxCd}
			, #{rqstNo}
			, #{fxudCnt}
			, #{totalAmnt}
)
	</insert>
</mapper>