<script>
	$(function(){
		$(".navi>li").mouseover(function(){
			$(this).find(".sub01")
	           .stop()
	           .slideDown(500)
	           .css({
	               'text-align': 'center'
	           });
		});
		$(".navi>li").mouseleave(function(){
			$(this).find(".sub01").stop().slideUp(500);
		});
	});
</script>